
.clear{
  clear: both;
  overflow: hidden;
}
.wrapper{
  display:inline;
}
.list{
  margin-top:10px;
}
.zz{
  padding:10px;
  height:45px;
  border-bottom:1px solid rgba(194, 194, 194, 0.5);
}
.list_item{
  
  padding:10px;
  height:100px;
  border-bottom:1px solid #E8E8E8;
}
.list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list_item .img image{
   width:100%;
   height:100%;
}
 
.list_item .info{
  width:59%;
  float:right;
  height:100px;
  position:relative;
}
.info2{
  
  font-size: 24rpx;
  display: flex;
  background-color: rgb(49, 142, 204);
  color:#fff;
  border-radius: 14rpx;
  padding: 8rpx;
  width:34%;
  float:right;
  height:30px;
  position:relative;
  justify-content: center;
  align-items: center;
}
.list_item .info .title{
  color:#333;
  margin-left:10px;
  font-size: 15px;
}
 
.list_item .info .price{
  color:#FF2727;
  margin-left:10px;
  margin-top:10px;
  font-size:15px;
}
 
.list_item .info .num{
  position: absolute;
  left:0px;
  bottom:10px;
  color:#747474;
  margin-left:10px;
  font-size:15px;
}
.z{
  display: flex;
  justify-content: center;
   font-size:40rpx;
}